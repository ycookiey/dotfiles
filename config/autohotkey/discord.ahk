#Requires AutoHotkey v2.0

; Discordがアクティブな時のみ有効
#HotIf WinActive("ahk_exe Discord.exe")

; ==============================================================================
; キーボード・ショートカット・リストを表示
; ==============================================================================
; 元: Ctrl + /
^/::Send "^/"


; ==============================================================================
; メッセージ
; ※注意: ここは1文字キーが多いため、単純に変えるとチャット入力に支障が出ます。
; 「Ctrl+何か」などに変更することを推奨します。
; ==============================================================================

; メッセージを編集 (元: E)
e::Send "e"

; メッセージを削除 (元: Backspace)
Backspace::Send "{Backspace}"

; メッセージをピン留め (元: P)
p::Send "p"

; リアクションを付ける (元: +)
+;::Send "{+}"  ; 日本語キーボードで「+」は Shift + ; の場合が多いです

; 返信 (元: R)
r::Send "r"

; メッセージを転送 (元: F)
f::Send "f"

; メッセージを話す (元: S)
s::Send "s"

; テキストをコピー (元: Ctrl + C)
^c::Send "^c"

; 未読にする (元: Alt + Enter)
!Enter::Send "!{Enter}"

; テキストエリアにフォーカス (元: Esc)
Esc::Send "{Esc}"


; ==============================================================================
; カスタム
; ==============================================================================

; メッセージにフォーカス (入力欄からTabで抜けて↑で移動)
!m::Send "{Tab}{Up}"

; チャンネル↓ / ↑ (元: Alt+↓ / Alt+↑)
!j::Send "!{Down}"
!k::Send "!{Up}"

; ページ履歴 戻る / 進む (元: Alt+← / Alt+→)
!h::Send "!{Left}"
!l::Send "!{Right}"

; 未読チャンネル↓ / ↑ (元: Alt+Shift+↓ / Alt+Shift+↑)
!+j::Send "!+{Down}"
!+k::Send "!+{Up}"

; メンバーリスト切替 (元: Ctrl+U → VSCode風 Ctrl+B)
^b::Send "^u"

; Quick Switcher (元: Ctrl+K → VSCode風 Ctrl+P)
^p::Send "^k"

; ピン留めポップアウト (元: Ctrl+P → Ctrl+Alt+P に退避)
^!p::Send "^p"


; ==============================================================================
; ナビゲーション
; ==============================================================================

; サーバー間を移動 (元: Ctrl + Alt + ↑ / ↓)
^!Up::Send "^!{Up}"
^!Down::Send "^!{Down}"

; チャンネル間を移動 (元: Alt + ↑ / ↓)
!Up::Send "!{Up}"
!Down::Send "!{Down}"

; ページ履歴で前と次に移動 (元: Alt + ← / →)
!Left::Send "!{Left}"
!Right::Send "!{Right}"

; 未読のチャンネル間を移動 (元: Alt + Shift + ↑ / ↓)
!+Up::Send "!+{Up}"
!+Down::Send "!+{Down}"

; 未読のメンションを含むチャンネル間を移動 (元: Ctrl + Shift + Alt + ↑ / ↓)
^!+Up::Send "^!+{Up}"
^!+Down::Send "^!+{Down}"

; 現在の通話へ移動 (元: Ctrl + Shift + Alt + V)
^!+v::Send "^!+v"

; 最後に表示したサーバーとDMの間を行き来する (元: Ctrl + Alt + →)
^!Right::Send "^!{Right}"

; Quick Switcherの切り替え (元: Ctrl + K)
^k::Send "^k"

; サーバーを作成、または参加 (元: Ctrl + Shift + N)
^+n::Send "^+n"


; ==============================================================================
; ドラッグ＆ドロップ
; ==============================================================================

; ドラッグ＆ドロップ開始 (元: Ctrl + D)
^d::Send "^d"

; 移動 (元: ↑ / ↓)
; ※ナビゲーション等と被る可能性あり
Up::Send "{Up}"
Down::Send "{Down}"

; アイテムをドロップ (元: Space / Enter)
Space::Send "{Space}"
Enter::Send "{Enter}"

; キャンセル (元: Esc) — 上記Escと重複のため省略


; ==============================================================================
; チャット
; ==============================================================================

; サーバー内のメッセージを既読にする (元: Shift + Esc)
+Esc::Send "+{Esc}"

; プライベートグループを作成 (元: Ctrl + Shift + T)
^+t::Send "^+t"

; ピン留めのポップアウトを切り替え (元: Ctrl + P → カスタムセクションで Ctrl+Alt+P にリマップ済)

; 受信ボックスのポップアウトを切り替え (元: Ctrl + I)
^i::Send "^i"

; 既読のトップ受信ボックスチャンネルをマーク (元: Ctrl + Shift + E)
^+e::Send "^+e"

; チャンネルメンバーリストまたはボイステキストチャットの切り替え (元: Ctrl + U)
^u::Send "^u"

; 絵文字リストを表示 (元: Ctrl + E)
^e::Send "^e"

; GIFピッカーを表示 (元: Ctrl + G)
^g::Send "^g"

; スタンプピッカーの切り替え (元: Ctrl + S)
^s::Send "^s"

; チャットを上または下にスクロールする (元: Page Up / Page Down)
PgUp::Send "{PgUp}"
PgDn::Send "{PgDn}"

; 最も古い未読メッセージまでジャンプ (元: Shift + Page Up)
+PgUp::Send "+{PgUp}"

; ファイルをアップロード (元: Ctrl + Shift + U)
^+u::Send "^+u"


; ==============================================================================
; 音声・ビデオ
; ==============================================================================

; ミュート切り替え (元: Ctrl + Shift + M)
^+m::Send "^+m"

; スピーカーミュート切り替え (元: Ctrl + Shift + D)
^+d::Send "^+d"

; 着信に応答 (元: Ctrl + Enter)
^Enter::Send "^{Enter}"

; プライベートメッセージまたはグループで通話を開始 (元: Ctrl + ')
^'::Send "^'"

; サウンドボードを切り替え (元: Ctrl + Shift + B)
^+b::Send "^+b"


; ==============================================================================
; その他
; ==============================================================================

; ヘルプを見る (元: Ctrl + Shift + H)
^+h::Send "^+h"

; 検索 (元: Ctrl + F)
^f::Send "^f"

; コンテキストメニューを開く (元: Shift + F10)
+F10::Send "+{F10}"

; Listen to Lofi Beats with Wumpus (元: Ctrl + Alt + Shift + W)
^!+w::Send "^!+w"

#HotIf
